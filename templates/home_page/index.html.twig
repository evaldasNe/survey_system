{% extends 'base.html.twig' %}

{% block title %}Pagrindinis puslapis{% endblock %}

{% block body %}
    <div class="container">
        <h1>Visos apklausos</h1>

        <div class="row justify-content-center">
            {% for survey in surveys %}

                <div class="card mb-4" style="min-width: 200px; max-width: 250px">
                    <div class="card-body">
                        <h5 class="card-title">Pavadinimas: {{ survey.title|capitalize }}</h5>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary"
                           href="{{ path('survey_show', {'id': survey.id}) }}">
                            Peržiūrėti
                        </a>
                        <a class="btn btn-primary"
                           href="#">
                            Dalyvauti
                        </a>
                    </div>
                </div>
            {% else %}
                <tr>
                    <td colspan="7">Apklausų nėra.</td>
                </tr>
            {% endfor %}
        </div>

    </div>
{% endblock %}
