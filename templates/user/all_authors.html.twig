{% extends 'base.html.twig' %}

{% block title %}Visi autoriai{% endblock %}

{% block body %}
    <div class="container">
        <h1>Visi autoriai</h1>

        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>El. paštas</th>
                <th>Vardas</th>
                <th>Pavardė</th>
                <th>Gimimo data</th>
                <th>Veiksmai</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                    <td>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Duomenų nerasta</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('author_new') }}">Kurti nauja</a>
    </div>
{% endblock %}
