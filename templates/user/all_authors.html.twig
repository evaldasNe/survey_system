{% extends 'base.html.twig' %}

{% block title %}All Authors{% endblock %}

{% block body %}
    <div class="container">
        <h1>All Authors</h1>

        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Last Name</th>
                <th>Birth date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                    <td>
                        {{ include('user/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">No data found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('author_new') }}">Create new</a>
    </div>
{% endblock %}
